<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="fi.metropolia.easytocook">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EasyToCook">
        <activity android:name=".Activity_search_by_ingredients"
            android:parentActivityName=".Activity_userProfile"></activity>
        <activity android:name=".Activity_recipe_detail" />
        <activity android:name=".Activity_search_by_dish"
            android:parentActivityName=".Activity_userProfile"/>
        <activity android:name=".Activity_recipe_creation"
            android:parentActivityName=".Activity_userProfile"/>
        <activity android:name=".Activity_calories"
            android:parentActivityName=".Activity_userProfile"/>
        <activity android:name=".Activity_create_account"
            android:parentActivityName=".Activity_signup_login"/>
        <activity android:name=".Activity_signup_login" />
        <activity android:name=".Activity_cookingTime"
            android:parentActivityName=".Activity_userProfile"/>
        <activity android:name=".Activity_userProfile" />
        <activity
            android:name=".Activity_logIn"
            android:parentActivityName=".Activity_signup_login" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

            tools:ignore="ManifestOrder,WrongManifestParent" />
    </application>

</manifest>